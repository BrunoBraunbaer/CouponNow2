<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".alert">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Alert"
        tools:layout_editor_absoluteX="163dp"
        tools:layout_editor_absoluteY="98dp" />

    <Button
        android:id="@+id/start"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="70dp"
        android:layout_height="42dp"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="8dp"
        android:text="Home"
        android:onClick="start"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.984" />

    <Button
        android:id="@+id/mySite"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="70dp"
        android:layout_height="42dp"
        android:layout_marginBottom="16dp"
        android:text="Site"
        android:onClick="mySite"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/start" />

    <Button
        android:id="@+id/search"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="70dp"
        android:layout_height="42dp"
        android:text="such"
        android:onClick="search"
        app:layout_constraintBaseline_toBaselineOf="@+id/mySite"
        app:layout_constraintLeft_toRightOf="@+id/mySite" />

    <Button
        android:id="@+id/alerts"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="70dp"
        android:layout_height="42dp"
        android:text="alert"
        android:onClick="alert"
        app:layout_constraintBaseline_toBaselineOf="@+id/search"
        app:layout_constraintLeft_toRightOf="@+id/search" />

    <Button
        android:id="@+id/sell"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="70dp"
        android:layout_height="42dp"
        android:text="sell"
        android:onClick="sell"
        app:layout_constraintBaseline_toBaselineOf="@+id/alerts"
        app:layout_constraintLeft_toRightOf="@+id/alerts" />

</android.support.constraint.ConstraintLayout>